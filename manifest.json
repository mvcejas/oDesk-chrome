{
	"name": "oDesk Chrome",
  "short_name": "oDesk Chrome",
	"description": "oDesk for Google Chrome.",
	"version": "1.2",
	"manifest_version": 2,
	"permissions": ["tabs","notifications","cookies","<all_urls>"],
   "web_accessible_resources": ["assets/icon/icon48.png"],
	"icons": {
    "16": "assets/icon/icon16.ico",
    "48": "assets/icon/icon48.png",
    "96": "assets/icon/icon96.png",
		"128": "assets/icon/icon128.png"
	},
   "background": {
      "scripts": ["assets/js/background.js"]
   },
   "browser_action": {
     	"default_icon":  "assets/icon/icon16.ico",
     	"default_title": "oDesk",
     	"default_popup": "static/popup.html"
   }
}